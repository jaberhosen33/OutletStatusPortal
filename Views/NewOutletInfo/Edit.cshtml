            <span asp-validation-for="UpdateDate" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success mt-3">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
