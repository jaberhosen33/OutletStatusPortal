@model List<OutletStatusPortal.Models.NewOutletInfo>

<h2>Outlet List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Outlet Name</th>
            <th>Location</th>
            <th>Office IT</th>
            <th>Courier</th>
            <th>Vendor</th>
            <th>Progress</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            int completed = 0;
            if (item.OfficeITSetup == "Yes") completed++;
            if (item.CouriarStatus == "Delivered") completed++;
            if (item.OutletITSetup == "Completed") completed++;
            if (item.LinkStatus == "Active") completed++;
            if (item.SAPID == "Yes") completed++;
            if (item.MailID == "Yes") completed++;
            if (item.POSID == "Yes") completed++;
            if (item.EPSLive == "Yes") completed++;
            int progress = (completed * 100) / 8;
            <tr>
                <td>@item.OutletName</td>
                <td>@item.Location</td>
                <td>@item.OfficeITSetup</td>
                <td>@item.CouriarStatus</td>
                <td>@item.Vendor</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar" style="width:@progress%">@progress%</div>
                    </div>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Sl">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Sl">Details</a> |   
                    <a asp-action="Delete" asp-route-id="@item.Sl" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

