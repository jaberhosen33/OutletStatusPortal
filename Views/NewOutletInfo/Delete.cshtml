@model OutletStatusPortal.Models.NewOutletInfo

@{
    ViewData["Title"] = "Delete Outlet";
}

<h2>Delete Outlet</h2>

<h4>Are you sure you want to delete this outlet?</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-4">Outlet Name</dt>
            <dd class="col-sm-8">@Model.OutletName</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Vendor</dt>
            <dd class="col-sm-8">@Model.Vendor</dd>

            <dt class="col-sm-4">Update Date</dt>
            <dd class="col-sm-8">@Model.UpdateDate.ToShortDateString()</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Sl" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>


