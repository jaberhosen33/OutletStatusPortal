@model IEnumerable<OutletStatusPortal.Models.StockItem>
@{
    ViewBag.Title = "Stock Item List";
}

<h2 class="mb-4">Stock Item List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Vendor</th>
            <th>Stock Type</th>
            <th>Outlet Name</th>
            <th>POS</th>
            <th>OM</th>
            <th>Server</th>
            <th>Router</th>
            <th>Scanner</th>
            <th>ICMO</th>
            <th>Operation Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VendorName</td>
                <td>@item.StockType</td>
                <td>@item.OutletName</td>
                <td>@item.Pos</td>
                <td>@item.Om</td>
                <td>@item.Server</td>
                <td>@item.Router</td>
                <td>@item.Scanner</td>
                <td>@item.Icmo</td>
                <td>@item.OperationDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

