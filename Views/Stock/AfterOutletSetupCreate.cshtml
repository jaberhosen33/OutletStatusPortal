@model OutletStatusPortal.Models.AfterOutletSetup
@{
    ViewData["Title"] = "Create After Outlet Setup";
}

<h2>Create After Outlet Setup</h2>

<form asp-action="AfterOutletSetupCreate" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Outlet dropdown from BeforeOutletSetUp -->
    <div class="form-group">
        <label asp-for="Sl">Outlet</label>
        <select asp-for="Sl" class="form-control">
            <option value="">-- Select Outlet --</option>
            @foreach (var outlet in ViewBag.Outlets as List<SelectListItem>)
            {
                <option value="@outlet.Value">@outlet.Text</option>
            }
        </select>
        <span asp-validation-for="Sl" class="text-danger"></span>
    </div>

    <!-- Manual dropdowns -->
    <div class="form-group">
        <label asp-for="OfficeITSetup"></label>
        <select asp-for="OfficeITSetup" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="OfficeITSetup" class="text-danger"></span>
    </div>

    @* Repeat for each YES/NO field *@
    <div class="form-group">
        <label asp-for="CourierStatus"></label>
        <select asp-for="CourierStatus" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="NetworkVendor"></label>
        <select asp-for="NetworkVendor" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="OutletITSetup"></label>
        <select asp-for="OutletITSetup" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LinkStatus"></label>
        <select asp-for="LinkStatus" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="SapId"></label>
        <select asp-for="SapId" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="MailId"></label>
        <select asp-for="MailId" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PosId"></label>
        <select asp-for="PosId" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EPSLive"></label>
        <select asp-for="EPSLive" class="form-control">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AssignedPersons"></label>
        <input asp-for="AssignedPersons" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
