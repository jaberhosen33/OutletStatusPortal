@model OutletStatusPortal.Models.AfterOutletSetup
@{
    ViewData["Title"] = "Create After Outlet Setup";
}

<h2 class="mb-4">Create After Outlet Setup</h2>
<form asp-action="AfterOutletSetupCreate" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
<div class="row">
    <!-- Outlet Dropdown -->
    <div class="col-md-6 mb-3">
        <label asp-for="BeforeOutletSetUpSl" class="form-label">Outlet</label>
            <select asp-for="BeforeOutletSetUpSl" class="form-select">
            <option value="">-- Select Outlet --</option>
            @foreach (var outlet in ViewBag.Outlets as List<SelectListItem>)
            {
                <option value="@outlet.Value">@outlet.Text</option>
            }
        </select>
            <span asp-validation-for="BeforeOutletSetUpSl" class="text-danger"></span>
    </div>

    <!-- Assigned Person Dropdown -->
    <div class="col-md-6 mb-3">
        <label asp-for="AssignedPersons" class="form-label">Assigned Person</label>
        <select asp-for="AssignedPersons" class="form-select">
            <option value="">-- Select Person --</option>
            @foreach (var user in ViewBag.UserLists as List<SelectListItem>)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
        <span asp-validation-for="AssignedPersons" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <!-- Office IT Setup -->
    <div class="col-md-4 mb-3">
        <label asp-for="OfficeITSetup" class="form-label">Office IT Setup</label>
        <select asp-for="OfficeITSetup" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="OfficeITSetup" class="text-danger"></span>
    </div>

    <!-- Courier Status -->
    <div class="col-md-4 mb-3">
        <label asp-for="CourierStatus" class="form-label">Courier Status</label>
        <select asp-for="CourierStatus" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="CourierStatus" class="text-danger"></span>
    </div>

    <!-- Network Vendor -->
    <div class="col-md-4 mb-3">
        <label asp-for="NetworkVendor" class="form-label">Network Vendor</label>
        <select asp-for="NetworkVendor" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="NetworkVendor" class="text-danger"></span>
    </div>

    <!-- Outlet IT Setup -->
    <div class="col-md-4 mb-3">
        <label asp-for="OutletITSetup" class="form-label">Outlet IT Setup</label>
        <select asp-for="OutletITSetup" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="OutletITSetup" class="text-danger"></span>
    </div>

    <!-- Link Status -->
    <div class="col-md-4 mb-3">
        <label asp-for="LinkStatus" class="form-label">Link Status</label>
        <select asp-for="LinkStatus" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="LinkStatus" class="text-danger"></span>
    </div>

    <!-- SAP ID -->
    <div class="col-md-4 mb-3">
        <label asp-for="SapId" class="form-label">SAP ID</label>
        <select asp-for="SapId" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="SapId" class="text-danger"></span>
    </div>

    <!-- Mail ID -->
    <div class="col-md-4 mb-3">
        <label asp-for="MailId" class="form-label">Mail ID</label>
        <select asp-for="MailId" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="MailId" class="text-danger"></span>
    </div>

    <!-- POS ID -->
    <div class="col-md-4 mb-3">
        <label asp-for="PosId" class="form-label">POS ID</label>
        <select asp-for="PosId" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="PosId" class="text-danger"></span>
    </div>

    <!-- EPS Live -->
    <div class="col-md-4 mb-3">
        <label asp-for="EPSLive" class="form-label">EPS Live</label>
        <select asp-for="EPSLive" class="form-select">
            <option value="">-- Select --</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <span asp-validation-for="EPSLive" class="text-danger"></span>
    </div>
</div>
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}