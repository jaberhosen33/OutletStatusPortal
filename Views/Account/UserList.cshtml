@model List<OutletStatusPortal.Models.Users>

@{
    ViewData["Title"] = "UserList";
}

<h1>User List</h1>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add New User</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr id="row-@user.StafId">
                <td>@user.StafId</td>
                <td>@user.Name</td>
                <td>@user.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.StafId" class="btn btn-sm btn-warning">Edit</a>
                    <button class="btn btn-sm btn-danger delete-user" data-id="@user.StafId">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.delete-user').click(function () {
                var userId = $(this).data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: 'You will not be able to recover this user!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("Delete")', { id: userId }, function (response) {
                            if (response.success) {
                                $('#row-' + userId).fadeOut();
                                Swal.fire('Deleted!', response.message, 'success');
                            } else {
                                Swal.fire('Error!', response.message, 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}
